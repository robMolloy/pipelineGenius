rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /scripts/{id} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if false;
    }
		match /comments/{id} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if false;
    }
  }
}